<div class="p-2">
    <div class="overflow-x-auto">
        <table class="table">
            <!-- head -->
            <thead>
                <tr>
                    <th>ID</th>
                    <th>User</th>
                    <th>Competition</th>
                    <th>Current Score</th>
                    <th>Change Score</th>
                </tr>
            </thead>
            <!-- body -->
            <tbody>

                {{#each result.items}}
                <tr>
                    <th>{{this.login_id}}</th>
                    <td>{{this.Competitor}}</td>
                    <td>{{this.CompName}}</td>
                    <td>{{this.score}}</td>
                    <td>
                        <form method="post" action="/competitions/score_change/" class="flex flex-col gap-2">
                            <div class="flex flex-col">
                                <label for="score-{{this.login_id}}">Score</label>
                                <input id="score-{{this.login_id}}" type="number" name="score" value="{{this.score}}" class="bg-neutral"/>
                                <input type="hidden" name="id" value="{{this.login_id}}"/>
                                {{> form_buttons }}
                            </div>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
